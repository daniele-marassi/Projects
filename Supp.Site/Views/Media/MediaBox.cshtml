@model List<Supp.Site.Models.MediaDto>

@using Supp.Site.Controllers;


@{
    ViewData["Title"] = "Media Box";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = HomeController.Culture;
}

@using (Html.BeginForm("MediaBox", "Media", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div style="position:relative; ">
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <div style="float:left; position:relative;">
                    <img src="data:image/png;base64,@(Convert.ToBase64String(item.Thumbnail, Base64FormattingOptions.InsertLineBreaks))">
                </div>
            }
        }
    </div>

    <div class="text-danger" style="padding:30px;">
        @Html.ValidationSummary(false)
    </div>
}
