@model Supp.Models.MediaConfigurationDto

@{
    ViewData["Title"] = "Details Media Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().UserFullName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Users.Where(_ => _.Id == model.UserId).FirstOrDefault().UserFullName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.MaxThumbnailSize)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MaxThumbnailSize)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.MinThumbnailSize)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MinThumbnailSize)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="text-danger" style="padding:30px;">
    @Html.ValidationSummary(false)
</div>
