@model SuppModels.ExecutionQueueDto

@{
    ViewData["Title"] = "Create ExecutionQueue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @Html.DropDownListFor(x => x.Type, new SelectList(Model.WebSpeechTypes, "Id", "Type", Model.Type), "-- Select --", new {@class="select" })
                @Html.ValidationMessageFor(x => x.Type)
            </div>
            <div class="form-group">
                <label asp-for="FullPath" class="control-label"></label>
                <input asp-for="FullPath" class="form-control textBoxCustom" />
                <span asp-validation-for="FullPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arguments" class="control-label"></label>
                <input asp-for="Arguments" class="form-control textBoxCustom" />
                <span asp-validation-for="Arguments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Output" class="control-label"></label>
                <input asp-for="Output" class="form-control textBoxCustom" />
                <span asp-validation-for="Output" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Host" class="control-label"></label>
                <input asp-for="Host" class="form-control textBoxCustom" />
                <span asp-validation-for="Host" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateQueue" class="control-label"></label>
                <input asp-for="StateQueue" class="form-control textBoxCustom" />
                <span asp-validation-for="StateQueue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="text-danger" style="padding:30px;">
    @Html.ValidationSummary(false)
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
