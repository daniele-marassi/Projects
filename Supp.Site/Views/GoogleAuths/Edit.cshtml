@model Supp.Models.GoogleAuthDto

@{
    ViewData["Title"] = "Edit Google Drive Auth";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>GoogleAuthDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" /><input type="hidden" asp-for="InsDateTime" />
            <div class="form-group">
                <label asp-for="Client_id" class="control-label"></label>
                <input asp-for="Client_id" class="form-control textBoxCustom" />
                <span asp-validation-for="Client_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project_id" class="control-label"></label>
                <input asp-for="Project_id" class="form-control textBoxCustom" />
                <span asp-validation-for="Project_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client_secret" class="control-label"></label>
                <input asp-for="Client_secret" class="form-control textBoxCustom" />
                <span asp-validation-for="Client_secret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TokenFileInJson" class="control-label"></label>
                <input asp-for="TokenFileInJson" class="form-control textBoxCustom" />
                <span asp-validation-for="TokenFileInJson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GooglePublicKey" class="control-label"></label>
                <input asp-for="GooglePublicKey" class="form-control textBoxCustom" />
                <span asp-validation-for="GooglePublicKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="text-danger" style="padding:30px;">
    @Html.ValidationSummary(false)
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
