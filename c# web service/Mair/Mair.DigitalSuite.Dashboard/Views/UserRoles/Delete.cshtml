@model Mair.DigitalSuite.Dashboard.Models.Dto.Auth.UserRoleDto

@{
    ViewData["Title"] = "Delete UserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().UserFullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Where(_ => _.Id == model.UserId).FirstOrDefault().UserFullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserRoleTypes.FirstOrDefault().TypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserRoleTypes.Where(_ => _.Id == model.UserRoleTypeId).FirstOrDefault().TypeName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<div class="text-danger">
    @Html.ValidationSummary(false)
</div>
