@model Mair.DigitalSuite.Dashboard.Models.Dto.Automation.PlcDataDto

@{
    ViewData["Title"] = "Edit PlcData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Driver" class="control-label"></label>
                <input asp-for="Driver" class="form-control" />
                <span asp-validation-for="Driver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConnectionString" class="control-label"></label>
                <input asp-for="ConnectionString" class="form-control" />
                <span asp-validation-for="ConnectionString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TagAddress" class="control-label"></label>
                <input asp-for="TagAddress" class="form-control" />
                <span asp-validation-for="TagAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TagValue" class="control-label"></label>
                <input asp-for="TagValue" class="form-control" />
                <span asp-validation-for="TagValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PlcDataList">Back to List</a>
</div>

<div class="text-danger">
    @Html.ValidationSummary(false)
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
