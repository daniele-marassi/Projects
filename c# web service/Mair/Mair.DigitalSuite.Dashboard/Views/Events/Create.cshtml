@model Mair.DigitalSuite.Dashboard.Models.Dto.Automation.EventDto

@{
    ViewData["Title"] = "Create Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Timers.FirstOrDefault().TimerName" class="control-label"></label>
                @Html.DropDownListFor(x => x.TimerId, new SelectList(Model.Timers, "Id", "TimerName", Model.TimerId), "-- Select --", new {@class="select" })
                @Html.ValidationMessageFor(x => x.TimerId)
            </div>
            <div class="form-group">
                <label asp-for="Tags.FirstOrDefault().TagName" class="control-label">PlcStart</label>
                @Html.DropDownListFor(x => x.PlcStartId, new SelectList(Model.Tags, "Id", "TagName", Model.PlcStartId), "-- Select --", new {@class="select" })
                @Html.ValidationMessageFor(x => x.PlcStartId)
            </div>
            <div class="form-group">
                <label asp-for="Tags.FirstOrDefault().TagName" class="control-label">PlcEnd</label>
                @Html.DropDownListFor(x => x.PlcEndId, new SelectList(Model.Tags, "Id", "TagName", Model.PlcEndId), "-- Select --", new {@class="select" })
                @Html.ValidationMessageFor(x => x.PlcEndId)
            </div>
            <div class="form-group">
                <label asp-for="Tags.FirstOrDefault().TagName" class="control-label">PlcAck</label>
                @Html.DropDownListFor(x => x.PlcAckId, new SelectList(Model.Tags, "Id", "TagName", Model.PlcAckId), "-- Select --", new {@class="select" })
                @Html.ValidationMessageFor(x => x.PlcAckId)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="text-danger">
    @Html.ValidationSummary(false)
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
