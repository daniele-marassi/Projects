@model EURIS.Entities.Catalog
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Delete Catalog";
}

<h2>Delete Catalog</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h3>Are you sure you want to delete this?</h3>
    <br />
    <fieldset>
        <legend>Catalog</legend>

        <div class="display-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Code)
        </div>
        <br />
        <div class="display-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Description)
        </div>

        <div class="display-label">
            <table>
                <tr>
                    <th id="borderTitle">
                        <label style="font:bold; font-size:16px;">Products Codes</label>
                    </th>
                    <th id="borderTitle">
                        <label style="font:bold; font-size:16px;">Products Description</label>
                    </th>
                </tr>

                @foreach (var item in Model.ProductsCatalog)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Description)
                        </td>
                    </tr>
                }

            </table>
        </div>

    </fieldset>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p>
        <input type="submit" value="Confirm" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
