@model EURISTest.Models.CatalogModels
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Edit Catalog";
}

<h2>Edit Catalog</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Catalog</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Code)
            @Html.ValidationMessageFor(model => model.Code)
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <br />
        <div class="editor-field">
            @Html.LabelFor(model => model.ProductsCodesList, "Select Product Codes", htmlAttributes: new { @class = "" })
            <div>
                @Html.ListBoxFor(model => model.SelectedProductsCodes, Model.ProductsCodesList, new { @class = "" })
                @Html.ValidationMessageFor(model => model.ProductsCodesList, "", new { @class = "" })
            </div>
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
